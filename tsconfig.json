{
    "compilerOptions": {
        "target": "ES2020",                    
        "module": "CommonJS",                   
        "outDir": "./dist",                     
        "strict": true,                         
        "esModuleInterop": true,                
        "skipLibCheck": true,                   
        "forceConsistentCasingInFileNames": true 
    },
    "include": [
        "src/**/*.ts",                        
        "src/**/*.js",       
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"                         
    ]
}
